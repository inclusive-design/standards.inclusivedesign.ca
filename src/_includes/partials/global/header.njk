<div class="bg-indigo-800">
    {% uioTemplate %}
    {% uioInit %}
    <div class="header large-viewport">
        <div class="header__intro">
            {% __ 'header-intro' | safe %}
        </div>
        <div class="header__settings">
            <ul class="header__language" role="list">
                <li>
                    <a href="{{ page.url }}" lang="en" hreflang="en"{% if page.lang == 'en' %} aria-current="page"{% endif %}>English</a>
                </li>
                <li>
                    <a href="{{ page.url }}" lang="fr" hreflang="fr"{% if page.lang == 'fr' %} aria-current="page"{% endif %}>Fran√ßais</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="header small-viewport">
        <div class="header__intro">
            {% __ 'header-intro-short' | safe %}
        </div>
        <div class="header__settings">
            <ul class="header__language" role="list">
                <li>
                    <a href="{% if page.url == '/' %} /en/ {% else %} {{ page.url | replace("/fr/", "/en/") }} {% endif %}" lang="en" hreflang="en"{% if page.lang == 'en' %} aria-current="page"{% endif %}>EN</a>
                </li>
                <li>
                    <a href="{% if page.url == '/' %} /fr/ {% else %} {{ page.url | replace("/en/", "/fr/") }} {% endif %}" lang="fr" hreflang="fr"{% if page.lang == 'fr' %} aria-current="page"{% endif %}>FR</a>
                </li>
            </ul>
        </div>
    </div>
</div>