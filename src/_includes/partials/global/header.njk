<div class="bg-indigo-800">
    {% uioTemplate %}
    {% uioInit %}
    <div class="header">
        <div class="header__intro">
            <span class="lg-hidden">{% __ 'header-intro-short' | safe %}</span>
            <span class="lg-block">{% __ 'header-intro' | safe %}</span>
        </div>
        {% if page | findTranslation(collections.all, lang, 'en') and page | findTranslation(collections.all, lang, 'fr') -%}
        <div class="header__settings">
            <ul class="header__language" role="list">
                <li>
                    <a href="{{ page | findTranslation(collections.all, lang, 'en') }}" lang="en-CA" hreflang="en-CA"{% if lang == 'en' %} aria-current="page"{% endif %}><span class="lg-hidden">EN</span><span class="lg-inline">English</span></a>
                </li>
                <li>
                    <a href="{{ page | findTranslation(collections.all, lang, 'fr') }}" lang="fr-CA" hreflang="fr-CA"{% if lang == 'fr' %} aria-current="page"{% endif %}><span class="lg-hidden">FR</span><span class="lg-inline">Fran√ßais</span></a>
                </li>
            </ul>
        </div>
        {%- endif %}
    </div>
</div>