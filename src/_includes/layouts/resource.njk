{% extends "layouts/base.njk" %}

{% set pageType = 'resource' %}

{% block banner %}
<div class="banner">
    <div class="wrapper">
        <div class="banner__content flow">
        	{% set breadcrumb = collections['pages_' + lang] | find('data.translationKey', 'resources') %}
            <a href="{{ breadcrumb.url }}" >{{ readcrumb.data.shortTitle if breadcrumb.data.shortTitle else breadcrumb.data.title }} {% include 'svg/arrowRight.svg' %}</a>
            <h1>{{ title }}</h1>
            <div class="meta flow">
                {% if topics.length %}
                <p>
                {% include "../../assets/images/topic.svg" %} {% for topicId in topics -%}
                {%- set topic = collections['topics_' + lang] | find("data.page.fileSlug", topicId) -%}
                {{ topic.data.title }}{% if not loop.last %}, {% endif -%}
                {%- endfor %}
                </p>
                {% endif %}
                <p>
                {% include "svg/type.svg" %} {% __ type %}
                </p>
                {% if projects.length %}
                <p>
                {% include "../../assets/images/project.svg" %} {% for projectId in projects -%}
                {%- set project = collections['projects_' + lang] | find("data.translationKey", projectId) -%}
                {{ project.data.title }}{% if not loop.last %}, {% endif -%}
                {%- endfor %}
                </p>
                {% endif %}
                <p>
                {% include "../../assets/images/language.svg" %}
                {% for language in contentLanguages %}
                    {% set languageObject = languages[lang].languages | find('code', language) %}
                    {{ languageObject.name }}{% if not loop.last %}, {% endif %}{% endfor %}
                </p>
                <p>
                {% include "svg/date.svg" %} {{ date | formatDate }}
                </p>
                {% if author or publisher %}
                <p>
                {% include "../../assets/images/publisher.svg" %} {{ author }}{% if author and publisher %}, {% endif %}{{ publisher }}
                </p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block content %}
<nav aria-labelledby="resource-menu" class="flow">
    <h2 id="resource-menu">{% __ 'toc' %}</h2>
    <inclusive-disclosure>
        <button aria-controls="{{ title | slugify }}-menu">
            <h2 id="resource-menu-mobile">{% __ 'toc' %}</h2>
        </button>
        <div content id="{{ title | slugify }}-menu">
            <div id="toc">
                <ul role="list" class="flow"></ul>
            </div>
        </div>
    </inclusive-disclosure>
</nav>
<article class="flow">
{{ content | safe }}
</article>
{% endblock %}
