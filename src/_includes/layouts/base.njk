<!DOCTYPE html>
<html lang="{{ lang if lang else defaultLanguage }}-CA" dir="ltr">
<head>
  {% include 'partials/global/meta.njk' %}
  <title>{{ title }}</title>
  {% include "partials/global/stylesheets.njk" %}
  {% include "partials/global/scripts.njk" %}
  {% include "svg/filters.svg" %}
</head>
<body>
  {% include "partials/global/header.njk" %}
  {% include "partials/components/navigation.njk" %}
  <main {% if page.fileSlug == "about" %}class="sectioned"{% endif %}>
    {% if hasBanner %}
    <div class="banner bg-{{ bannerBgColor }}">
      <div class="wrapper flow">
        <h1>{{ bannerTitle | renderContent('md') | safe }}</h1>
        {{ bannerBody | renderContent('md') | safe }}
      </div>
      {% if bannerImage %}
      <div class="banner__image">
        <img src="{{ bannerImage }}" alt="{{ bannerImageAltText }}" />
      </div>
      {% endif %}
    </div>
    {% endif %}
    {% block content %}{% endblock %}
  </main>
  {% include "partials/global/footer.njk" %}
  {% uioInit %}
</body>
</html>
